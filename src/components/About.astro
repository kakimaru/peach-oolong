<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger) 

  const h1 = document.querySelector('.about-title');
  const p = document.querySelector('.about-text');
  
  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: h1,
      toggleActions: "play none none reverse",
      start: "top 80%",
      markers: true,
    },
  })


  tl.fromTo(
    h1,
    {
      y: 50,
      autoAlpha: 0,
    },
    {
      y: 0,
      autoAlpha: 1,
      duration: 0.6,
      ease: "power4.out",
    }
  ).fromTo(
    p,
    {
      y: 50,
      autoAlpha: 0,
    },
    {
      y: 0,
      autoAlpha: 1,
      duration: 0.6,
      ease: "power4.out",
    },
    "-=0.2"
  );


</script>