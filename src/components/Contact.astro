</section>

<style>
  section {
    padding: 40px 16px 0;
    background: #DDD6FF;
  }

  .contact-wrap {
    background-color: #748AF3;
    padding: 12px 12px 0;
    border-radius: 24px 24px 0 0;
  }

  .container {
    border: 1px solid #fff;
    border-bottom: none;
    border-radius: 16px 16px 0 0;
    padding:  24px 16px 24px;
    color: #fff;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: center;
  }

  .inner {
    display: grid;
    gap: 16px;
  }

  .sub-inner {
    display: grid;
    gap: 4px;
  }

  h2 {
    font-size: 16px;
    margin-bottom: 16px;
    font-weight: bold;
    margin: 0;
  }

  p {
    font-size: 14px;
    line-height: 160%;
    margin-bottom: 24px;
    margin: 0;
  }

  .button {
    background: linear-gradient(320deg, rgba(212,83,255,1) 0%, rgba(255,176,162,1) 50%, rgba(212,83,255,1) 100%);
    background-size: 200%;
    background-position: 100%;
    border: 1px solid #748AF3;
    color: #fff;
    font-weight: bold;
    font-size: 14px;
    padding: 12px;
    border-radius: 80px;
    display: block;
    text-decoration: none;
    max-width: 230px;
    width: 100%;
    transition: all 0.3s ease-in-out;
  }

  .button:hover {
    background-position: 0%;
    box-shadow: inset 0 4px 8px 0 rgba(255, 255, 255, 0.5);
    border: 1px solid #748AF3;
  }

  h3 {
    font-size: 14px;
    font-weight: bold;
    margin: 0;
  }

  .subtext {
    font-size: 12px;
    margin: 0;
    transition: all 0.3s;
  }

  .subtext:hover {
    opacity: 0.7;
  }

  .x-icon:hover{
    opacity: 0.7;
  }

  .sub-info {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .sub-info a {
    padding: 0 4px;
  }

  .sub-info a:first-of-type {
    border-right: 1px solid #fff;
    padding-right: 12px;
  }

  .sub-info svg {
    max-width: 16px;
    width: 100%;
    height: auto;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger)

  const wrap = document.querySelector('.contact-wrap');

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: wrap,
      toggleActions: "play none none reverse",
      start: "top 100%",
    },
  })

  tl.fromTo(wrap,
    {
      y: 100,
      autoAlpha: 0,
    },
    {
      y: 0,
      autoAlpha: 1,
      duration: 0.6,
      ease: "back.out",
    }
  )


</script>